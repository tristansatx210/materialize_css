<%= render 'shared/errors', obj: @student %>

<div class="container">
  <div class="row center enroll">
    <div class="col s12 m12 l12">
      <div class="card-panel">
      <h3 class="header">Enroll Now!</h3>
        <div class="row">
        <%= form_for(@student, html: { class: "col s12" }) do |f| %>
          <div class="row">
            <div class="input-field">
              <i class="material-icons prefix">account_circle</i>
              <%= f.text_field :name %>
              <%= f.label :name, placeholder: "Enter Name", class: "active" %>
            </div>
          </div>
          
          <div class="row">
            <div class="input-field">
              <i class="material-icons prefix">email</i>  
              <%= f.label :email %>
              <%= f.email_field :email, class: "active" %>
            </div>
          </div>
          
                    <div class="row">
            <div class="input-field">
              <i class="material-icons prefix">lock</i>  
              <%= f.label :password, class: "active" %>
              <%= f.password_field :password, placeholder: "Enter Password" %>
            </div>
          </div>
          
          <div class="row">
            <div class="input-field">
              <i class="material-icons prefix">lock</i>  
              <%= f.label :password_confirmation, class: "active" %>
              <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
            </div>
          </div>
          
          
          <div class="row">
            <div class="input-field">
              
              <%= f.button(@student.new_record? ? '<i class="material-icons right">arrow_forward</i>Enroll Now!'.html_safe : '<i class="material-icons right">arrow_forward</i>Update Profile'.html_safe, class: "waves-effect waves-light btn right" ) %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
