<div class="row">
  <div class="container"> 
  <div class="col s12">
    <h3 class="center-align">Students Directory</h3>
  </div>


<div class="row">
  <% @students.each do |s| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">Name: <%= s.name %></span>
            <p>Email: <%= s.email %></p>
            <p>Course Enrollments: None</p>
          </div>
          <div class="card-action">
            <a href="#">View Profile</a>
          </div>
        </div>
    </div>
  <% end %>
    </div>
  </div>
</div>