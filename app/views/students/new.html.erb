<% if @student.errors.any? %>
  <div class="container">
    <div class="row enroll">
      <div class="col s12 m12 l12">
        <div class="card-panel red lighten-2">
          <span class="white-text">
          Please fix 
          <%= pluralize(@student.errors.count, "error") %>
            <ul>
              <strong><% @student.errors.full_messages.each do |msg| %></strong>
                <li>
                  <%= msg %>
                </li>
              <% end %>
            </ul>
            <% end %>
          </span>  
        </div>
      </div>
    </div>
  </div>

<div class="container">
  <div class="row center enroll">
    <div class="col s12 m12 l12">
      <div class="card-panel">
      <h3 class="header">Enroll Now!</h3>
        <div class="row">
        <%= form_for(@student, html: { class: "col s12" }) do |f| %>
          <div class="row">
            <div class="input-field">
              <i class="material-icons prefix">account_circle</i>
              <%= f.text_field :name %>
              <%= f.label :name %>
            </div>
          </div>
          <div class="row">
            <div class="input-field">
              <i class="material-icons prefix">email</i>  
              <%= f.label :email %>
              <%= f.email_field :email %>
            </div>
          </div>
          <div class="row">
            <div class="input-field">
              <%= f.button class: "btn waves-effect waves-light right" do %>
                Enroll <i class="material-icons right">send</i>
              <% end %>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
